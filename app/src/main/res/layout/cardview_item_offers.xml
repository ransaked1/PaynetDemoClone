<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:id="@+id/card_view"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="130dp"
    android:layout_height="130dp"
    cardview:strokeWidth="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginTop="3dp"
    cardview:cardCornerRadius="6dp"
    cardview:strokeColor="@color/colorPrimary"
    android:backgroundTint="@color/darkAccent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_img"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.266"></ImageView>

        <TextView
            android:id="@+id/card_title"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="Title"
            android:textSize="12sp"
            android:textColor="@color/textActive"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.93"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>